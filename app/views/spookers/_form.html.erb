<%= semantic_form_for @spooker do |f| %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :darkness, :as => :boolean %>
      <%= f.input :story %>
      <%= f.input :month %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
    <% end %>
  <% end %>
