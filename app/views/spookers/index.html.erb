<p id="notice"><%= notice %></p>

<h1>Spookers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Spooky Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spookers.each do |spooker| %>
      <tr>
        <td><%= spooker.name %></td>
        <td><%= image_tag "images-"+spooker.picture+".jpg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spooker', new_spooker_path %>
